<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <item name="llEmptyImage">@drawable/empty</item>
        <item name="llErrorImage">@drawable/error</item>
    </style>
    <style name="AppTheme.Toolbar_titleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textColor">@color/toolbar_title_text_color</item>
    </style>
    <style name="AppTheme.NavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">

    </style>
    <style name="AppTheme.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.Toolbar_titleTextAppearance</item>
        <item name="maxButtonHeight">@dimen/navigation_height</item>
        <item name="contentInsetStart">6dp</item>

    </style>
    <style name="AppTheme.buttonStyle" parent="TextAppearance.AppCompat.Button">
            <item name="android:textSize">@dimen/button_text_size</item>
    </style>
    <style name="AppTheme.buttonStyleSmall" parent="Widget.AppCompat.Button.Small">
        <item name="android:textSize">@dimen/small_button_text_size</item>
    </style>
    <style name="mainButtonStyle" >
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:textColor">@drawable/white_text_selector</item>
    </style>
    <style name="dangerButtonStyle">
        <item name="android:textColor">@drawable/white_text_selector</item>
        <item name="android:background">@drawable/danger_button_selector</item>
    </style>
    <style name="secondaryButtonStyle">
        <item name="android:textColor">@drawable/black_text_selector</item>
        <item name="android:background">@drawable/secondary_button_selector</item>
    </style>
</resources>