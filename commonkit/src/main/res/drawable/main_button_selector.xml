<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/main_disable_border" android:width="@dimen/button_border_width"/>
                    <corners android:radius="@dimen/button_border_radius"/>
                    <solid android:color="@color/main_disable_bg"/>
                </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/main_pressed_border" android:width="@dimen/button_border_width"/>
            <corners android:radius="@dimen/button_border_radius"/>
            <solid android:color="@color/main_pressed_bg"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/main_default_bg" android:width="@dimen/button_border_width"/>
            <corners android:radius="@dimen/button_border_radius"/>
            <solid android:color="@color/main_default_bg"/>
        </shape>
    </item>
</selector>